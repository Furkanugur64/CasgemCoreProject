@model List<Contact>

@{
    ViewData["Title"] = "GetMessageByThanks";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Teşekkür Mesajları</h1>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Mesajı Sil</th>
        <th>Mesajı Gör</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Subject</td>
            <td>@Convert.ToDateTime(@item.SendDateMessage).ToString("dd/MM/yyyy")</td>
            <td> <a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a>  </td>
            <td> <a href="/Contact/MessagDetailsContact/@item.ContactId" class="btn btn-info">Detay</a> </td>
        </tr>
    }
</table>

