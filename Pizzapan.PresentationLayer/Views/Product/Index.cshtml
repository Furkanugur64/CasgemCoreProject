@model List<Pizzapan.EntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Ürün Listesi</h1>


<table class="table table-bordered">
    <tr style="background-color:brown; color:white">
        <th>#</th>
        <th>Ürün Adı</th>
        <th>Açıklama</th>
        <th>Fiyat</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr >
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Price</td>
            <td>@item.Category.CategoryName</td>
            <td> <a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
            <td> <a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<td> <a href="/Product/AddProduct/" class="btn btn-info">Yeni Ürün</a></td>